<?xml version="1.0" encoding="UTF-8"?>
<web-app
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">

<context-param>
    <param-name>com.sun.faces.expressionFactory</param-name>
    <param-value>com.sun.el.ExpressionFactoryImpl</param-value>
</context-param>
    <welcome-file-list>
     	<welcome-file>welcome.jsp</welcome-file>
   	</welcome-file-list>
     
    <servlet>
        <servlet-name>LoginSignupServlet</servlet-name>
        <servlet-class>edu.iit.itmd515.LoginSignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>edu.iit.itmd515.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestRideServlet</servlet-name>
        <servlet-class>edu.iit.itmd515.RequestRideServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DispatchRideServlet</servlet-name>
        <servlet-class>edu.iit.itmd515.DispatchRideServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>edu.iit.itmd515.AdminServlet</servlet-class>
    </servlet>
    

  	<servlet-mapping>
	    <servlet-name>LoginSignupServlet</servlet-name>
	    <url-pattern>/login-signup</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
	    <servlet-name>ProfileServlet</servlet-name>
	    <url-pattern>/profile</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
	    <servlet-name>RequestRideServlet</servlet-name>
	    <url-pattern>/request-ride</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
	    <servlet-name>DispatchRideServlet</servlet-name>
	    <url-pattern>/dispatch-ride</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
	    <servlet-name>AdminServlet</servlet-name>
	    <url-pattern>/admin</url-pattern>
  	</servlet-mapping>
  	
</web-app>
